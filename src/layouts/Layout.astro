---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/space-grotesk";
import "@fontsource/audiowide";
import "@fontsource/poppins";
import "../styles/globals.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="es" class="bg-blue-950 text-white">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Guías para dominar el desarrollo web" />
    <title>
      {title ? title : "Lugp.dev | Guías para dominar el desarrollo web"}
    </title>
    <ClientRouter />
  </head>
  <body>
    <Navbar />
    <div transition:animate="fade" class="pt-[145px] md:pt-[83px]">
      <slot />
    </div>
    <Footer />
  </body>
</html>

<style>
  html {
    font-family: "Space Grotesk Variable", sans-serif;
  }

  h1,
  .subtitle {
    font-family: "Audiowide", sans-serif;
  }
</style>
