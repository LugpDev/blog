---
import { Icon } from "astro-icon/components";
import { techCategoryValues } from "../categories";
import Category from "../pages/components/Category.astro";

const topCategories = techCategoryValues.slice(0, 8);
---

<section class="section-padding pt-12 pb-20">
  <h1 class="subtitle">Categorías</h1>

  <div
    class="grid grid-cols-1 gap-5 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 mb-4"
  >
    {topCategories.map((category) => <Category name={category} />)}
  </div>

  <a href="/categorias" class="projects-link text-xl"
    >Ver más <Icon name="gravity-ui:arrow-right" size={24} />
  </a>
</section>
